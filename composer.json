{
    "name": "micro/skeleton",
    "description": "Micro Framework: Application skeleton",
    "type": "project",
    "require": {
        "micro/kernel-app": "^1",
        "micro/plugin-logger-monolog": "^1",
        "micro/plugin-console": "^1",
        "micro/plugin-configuration-helper": "^1",
        "vlucas/phpdotenv": "^5.4",
        "micro/plugin-http-pack": "^1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "vimeo/psalm": "^5",
        "phpstan/phpstan": "^1.9"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Stanislau Komar",
            "email": "stanislau_komar@epam.com"
        }
    ],
    "scripts": {
        "test-phpstan": [
            "php vendor/bin/phpstan"
        ],
        "test-psalm": [
            "php vendor/bin/psalm"
        ],
        "test-unit": [
            "php vendor/bin/phpunit"
        ],
        "test-all": [
            "@test-psalm",
            "@test-phpstan",
            "@test-unit"
        ],
        "auto-scripts": [
            "@test-all"
        ],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    }
}
